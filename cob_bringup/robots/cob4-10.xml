<?xml version="1.0"?>
<launch>

	<!-- args -->
	<arg name="robot" value="cob4-10"/>
	<arg name="cob4-10-b1" default="localhost"/>
	<arg name="cob4-10-t1" default="localhost"/>
	<arg name="cob4-10-t2" default="localhost"/>
	<arg name="cob4-10-t3" default="localhost"/>
	<arg name="cob4-10-s1" default="localhost"/>
	<arg name="cob4-10-h1" default="localhost"/>
	<arg name="env-script" default="$(find cob_bringup)/env.sh"/>
	<arg name="sim" default="false"/>

	<!-- upload robot description -->
	<include file="$(find cob_hardware_config)/upload_robot.launch">
		<arg name="robot" value="$(arg robot)"/>
	</include>
	<!-- upload semantic description -->
	<include file="$(find cob_moveit_config)/launch/upload_config.launch">
		<arg name="robot" value="$(arg robot)"/>
		<arg name="load_semantic_description" value="true"/>
		<arg name="load_planning_context" value="false"/>
	</include>
	<!-- upload default configuration parameters -->
	<include file="$(find cob_default_robot_config)/upload_param.launch">
		<arg name="robot" value="$(arg robot)"/>
	</include>

	<group>
		<machine name="$(anon b1)" address="$(arg cob4-10-b1)" env-loader="$(arg env-script)" default="true" timeout="30"/>

		<!-- start hardware -->
		<group unless="$(arg sim)">
			<include file="$(find cob_bringup)/tools/pc_monitor.launch">
				<arg name="robot" value="$(arg robot)"/>
				<arg name="pc" value="$(arg cob4-10-b1)"/>
				<arg name="enable_ntp_monitoring" value="false"/>
			</include>
		</group>
		
		<include file="$(find cob_bringup)/components/cob4_base.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="sim" value="$(arg sim)"/>
		</include>
		
		<include file="$(find cob_bringup)/tools/base_collision_observer.launch">
			<arg name="robot" value="$(arg robot)"/>
		</include>
		<!-- <include file="$(find cob_bringup)/tools/collision_monitor.launch"> -->
		<node pkg="rostopic" type="rostopic" args="pub /safety_controller/state_is_valid std_msgs/Bool 'data: true' -r10" name="fake_collission_monitor" output="screen"/>

		<include file="$(find cob_bringup)/tools/diagnostics_aggregator.launch">
			<arg name="robot" value="$(arg robot)"/>
		</include>
		
		<include file="$(find cob_bringup)/tools/teleop.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="sim" value="$(arg sim)"/>
		</include>
		<include file="$(find cob_bringup)/tools/docker_control.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="multi_station" default="true"/>
			<arg name="sim" value="$(arg sim)"/>
		</include>
		<include file="$(find cob_bringup)/tools/robot_state_publisher.launch">
			<arg name="robot" value="$(arg robot)"/>
		</include>

		<!-- simulation only -->
		<include if="$(arg sim)" file="$(find cob_bringup)/tools/fake_diagnostics.launch">
			<arg name="fake_diagnostics" value="'base_laser_front, base_laser_right, base_laser_left, -b1, -t1, -t2, -t3, -s1, -h1, joy, safety'"/>
		</include>
	</group>

	<group>
		<machine name="$(anon t1)" address="$(arg cob4-10-t1)" env-loader="$(arg env-script)" default="true" timeout="30"/>

		<!-- start hardware -->
		<group unless="$(arg sim)">
			<include file="$(find cob_bringup)/tools/pc_monitor.launch">
				<arg name="robot" value="$(arg robot)"/>
				<arg name="pc" value="$(arg cob4-10-t1)"/>
				<arg name="ntp_server" value="$(arg cob4-10-b1)"/>
			</include>
		</group>

		<include file="$(find cob_bringup)/components/canopen_generic.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="component_name" value="arm_left"/>
			<arg name="can_device" value="can3"/>
			<arg name="sim" value="$(arg sim)"/>
			<arg if="$(arg sim)" name="cartesian_control" value="false"/>
		</include>
		<include file="$(find cob_bringup)/components/canopen_generic.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="component_name" value="arm_right"/>
			<arg name="can_device" value="can2"/>
			<arg name="sim" value="$(arg sim)"/>
			<arg if="$(arg sim)" name="cartesian_control" value="false"/>
		</include>

		<include file="$(find cob_bringup)/components/legacy_sdhx.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="component_name" value="gripper_right"/>
			<arg name="sim" value="$(arg sim)"/>
		</include>

		<!-- start common nodes used in hardware and simulation -->
		<include file="$(find cob_script_server)/launch/script_server.launch"/>
		<include file="$(find cob_bringup)/tools/behavior.launch">
			<arg name="robot" value="$(arg robot)"/>
		</include>
	</group>

	<group>
		<machine name="$(anon t2)" address="$(arg cob4-10-t2)" env-loader="$(arg env-script)" default="true" timeout="30"/>

		<!-- start hardware -->
		<group unless="$(arg sim)">
			<include file="$(find cob_bringup)/tools/pc_monitor.launch">
				<arg name="robot" value="$(arg robot)"/>
				<arg name="pc" value="$(arg cob4-10-t2)"/>
				<arg name="ntp_server" value="$(arg cob4-10-b1)"/>
			</include>
		</group>

	</group>

	<group>
		<machine name="$(anon t3)" address="$(arg cob4-10-t3)" env-loader="$(arg env-script)" default="true" timeout="30"/>

		<!-- start hardware -->
		<group unless="$(arg sim)">
			<include file="$(find cob_bringup)/tools/pc_monitor.launch">
				<arg name="robot" value="$(arg robot)"/>
				<arg name="pc" value="$(arg cob4-10-t3)"/>
				<arg name="ntp_server" value="$(arg cob4-10-b1)"/>
			</include>
		</group>

		<include file="$(find cob_bringup)/components/legacy_sdhx.launch">
			<arg name="robot" value="$(arg robot)"/>
			<arg name="component_name" value="gripper_left"/>
			<arg name="sim" value="$(arg sim)"/>
		</include>
	</group>

	<group>
		<machine name="$(anon s1)" address="$(arg cob4-10-s1)" env-loader="$(arg env-script)" default="true" timeout="30"/>

		<!-- start hardware -->
		<group unless="$(arg sim)">
			<include file="$(find cob_bringup)/tools/pc_monitor.launch">
				<arg name="robot" value="$(arg robot)"/>
				<arg name="pc" value="$(arg cob4-10-s1)"/>
				<arg name="ntp_server" value="$(arg cob4-10-b1)"/>
			</include>
		</group>

	</group>

	<group>
		<machine name="$(anon h1)" address="$(arg cob4-10-h1)" env-loader="$(arg env-script)" default="true" timeout="30"/>

		<!-- start hardware -->
		<group unless="$(arg sim)">
			<include file="$(find cob_bringup)/tools/pc_monitor.launch">
				<arg name="robot" value="$(arg robot)"/>
				<arg name="pc" value="$(arg cob4-10-h1)"/>
				<arg name="ntp_server" value="$(arg cob4-10-b1)"/>
			</include>
		</group>

	</group>

	<group> <!-- this is a special group to assign DISPLAY:=0 only to the mimic node (and not to all other nodes, e.g. sound node) -->
		<machine name="$(anon h1-display)" address="$(arg cob4-10-h1)" env-loader="$(arg env-script).display" default="true" timeout="30"/>
		<include file="$(find cob_bringup)/drivers/mimic.launch">
			<arg name="sim" value="$(arg sim)"/>
			<arg name="old" value="true"/>
		</include>
	</group>

	<machine name="$(anon b1)" address="$(arg cob4-10-b1)" env-loader="$(arg env-script)" default="true" timeout="30"/>

</launch>
